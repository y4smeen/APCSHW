public class Shapes {
    public String box(int r, int c) {
	String s = "";

	while (r>0){
	    int cc = 0;
	    while (cc < c){
		s += "*";
		cc += 1;
	    }
	    s = s + "\n";
	    r--;
	}

	return s;
    }

    public String tri1(int h){
	String x = "";
	int c = 0;
	while (c <= h) {
	    int cc = 0;
	    while (cc < c) {
		x += "*";
		cc += 1;
	    }
	    x += "\n";
	    c += 1;
	}
	return x;
    }

    public String tri2(int h){
	String x = "";
	int t = 1;
	while (h > 0) {
	    int s = h - 1;
	    int cc = 0;
	    while (s > 0) {
		x += " ";
		s -= 1;
	    }
	    while (t > 0) {
		x += "*";
		t -= 1;
	    }
	    x += "\n";
	    h -= 1;
	    c += 1;
	    t = c; 
	}
	return x;
    }
	
}
